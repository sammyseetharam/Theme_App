<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/primaryLightColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/screenMargin"
        android:gravity="center_horizontal"
        >
        <!--Title textView, without textView custom-->
        <TextView
            android:textSize="35sp"
            android:gravity="center"
            android:layout_width="401dp"
            android:layout_height="95dp"
            android:paddingTop="@dimen/padding"
            android:text="Victor - E - Viking Clicker" />


        <!-- you can see this textColor overrides the
               text color listed for EditText settings applied
               at the theme level -->


        <!--Custom Image button-->

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="277dp"
            android:layout_height="164dp"
            app:srcCompat="@drawable/fremdlogo" />

        <EditText
            style="@style/EditTextCustom"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:hint="Name:"
            android:textColorHint="@color/primaryDarkColor"
            tools:ignore="TextContrastCheck" />

        <TextView
            style="@style/TextViewCustom"
            android:layout_gravity="left"
            android:layout_marginBottom="@dimen/textViewHeights"
            android:text="Click Counter:" />

        <!--Need to add a blank text view to display number of clicks-->

    </LinearLayout>
</ScrollView>
